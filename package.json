{
  "name": "@thimlohsedev/branch_lightyear",
  "version": "1.4.0",
  "description": "The comfort of Git in an IDE right in the terminal",
  "main": "src/index.js",
  "bin": {
    "@thimlohsedev/bl": "bin/branch_lightyear",
    "bl": "bin/branch_lightyear"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/**/*",
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThimDeveloper/branch_lightyear.git"
  },
  "scripts": {
    "prepare": "yarn build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/entry/cli.ts",
    "build": "rimraf dist &&  tsc --p tsconfig.json",
    "local": "npm unlink && npm link",
    "refresh": "rm -rf ./node_modules ./package-lock.json && rm -rf dist && yarn",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "keywords": [
    "cli",
    "git",
    "branch",
    "branch_lightyear"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "cli-spinners": "^2.4.0",
    "esm": "^3.2.25",
    "inquirer": "^7.3.3",
    "minimist": "^1.2.5",
    "ora": "^5.1.0",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-lib": "^0.0.5",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  }
}
