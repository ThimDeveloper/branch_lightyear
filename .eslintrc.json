{
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": ["bin", "node_modules", "dist"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-extra-parens": "warn",
    "no-console": "warn",
    "dot-notation": "warn"
  }
}
